<View 
	controllerName="com.lab2dev.browserorders.controller.Home" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true" 
	xmlns="sap.m"
	height="100%">
	<Page id="page" title="Orders">
		<content>
			<List id="invoiceList" class="sapUiResponsiveMargin" width="auto" items="{items>/}">
				<headerToolbar class="sapUiResponsiveMargin">
					<Toolbar>
						<SearchField width="50%" search=".onSearch" placeholder="Search" />
						<ToolbarSpacer />
						<Button icon="sap-icon://filter" press=".onFilterButtonPress" class="MyCustomButton" />
						<Button icon="sap-icon://paste" press=".onFilterButtonPress" class="MyCustomButton" />
					</Toolbar>
				</headerToolbar>
				<items>
					<ObjectListItem 
						title="{items>OrderID}" 
						number="{ path: 'items>OrderDate', formatter: '.formatter.formatDate' }" 
						type="Navigation"
						press="onPress" >
						<attributes>
							<ObjectAttribute text="{items>ShipName}" />
							<ObjectAttribute text="{i18n>Shipped}: { path: 'items>ShippedDate', formatter: '.formatter.formatDate' }" />
						</attributes>
						<firstStatus>
							<ObjectStatus text="{
                                parts: ['items>OrderDate', 'items>ShippedDate'],
                                formatter: '.formatter.shipmentStatusText'}"
								state="{ 
									parts: ['items>OrderDate', 'items>ShippedDate'],
									formatter: '.formatter.shipmentStatus'}"/>
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</View>
